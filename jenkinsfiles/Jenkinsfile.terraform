pipeline {
  agent any

  stages {
    stage('Init') {
      steps {
        sh 'terraform -chdir=infra-terraform/dev init'
      }
    }

    stage('Plan') {
      steps {
        sh 'terraform -chdir=infra-terraform/dev plan -out planfile'
      }
    }

    stage('Apply') {
      steps {
        sh 'terraform -chdir=infra-terraform/dev apply planfile'
      }
    }
  }
}
